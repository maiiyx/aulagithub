programa
{
	
	funcao inicio()
	{
	
		inteiro anoAtual, anoNascimento, idadeAtual, idade

		escreva("Digite o ano atual: ")
		leia(anoAtual)

		escreva("Digite o ano de nascimento: ")
		leia(anoNascimento)

		idadeAtual = anoAtual - anoNascimento
		escreva("Sua idade: ",idadeAtual," anos")
		idade = anoNascimento + 38
		escreva("\nSua idade em 2060: ",idadeAtual + 38," anos")

	}

}
